<div class= "container">
<div class= "row">
<div class= "col-md-3">
<%= render 'books/book', {books: @books ,book: @book}  %>
</div>

 <div class="col-md-8 offset-md-1"> 
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Books</th>
        </tr>
  </thead>
  <tbody>
<% @user.books.each do |book| %>
<tr>
  <td><%= image_tag book.user.get_image(100,100) %></td>
   <td><%= book.user.name %></td>
  <td><%= link_to 'show', book_path(book) %></td>
</tr>
<% end %>
</tbody>
</table>

</div>
</div>
</div>