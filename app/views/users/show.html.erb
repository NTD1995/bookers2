<h1>User info</h1>

  <h2>Name</h2>
  <%= @user.name %>
  
<h2>Image</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image %>
<% else %>
  <%= image_tag 'no_image' %>
<% end %>

  <h3>Introduction</h3>
  <%= @user.introduction %>

  <p><%= link_to "Edit User", edit_user_path(@user) %></p>
 
  

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: "btn btn-lg btn-block btn-info mt-4" %>
<% end %>


<div>
  <%= image_tag @user.get_image(100,100) %>
   <p><%= @user.name %></p>
  <p><%= link_to 'show', book_path(@user.id) %></p>
</div>