<h1>User info</h1>

<%= form_with model: @user url: update_list_path(@user.id), method: :patch do |f| %>

  <h2>Name</h2>
  <%= f.text_field :title %>
  
<h2>Image</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image %>
<% else %>
  <%= image_tag 'no_image' %>
<% end %>

  <h3>Introduction</h3>
  <%= f.text_area :body %>
  
  <% if @user == current_user %>
    <p><%= link_to "Edit User", edit_user_path(@user) %></p>
  <% end %>
  
<% end %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :Title %>
  <h4>Opinion</h4>
  <%= f.text_area :Opinion %>
   <p><%= link_to 'Create Book', edit_book_path(book.id) %></p>
<% end %>


<h1>Users</h1>

<% @users.each do |user| %>
  <div>
    <%= image_tag user.get_image %>
    <p>image<%= image_tag 'no_image.jpg' %></p>
    <p>name<%= user.name %></p>
    <p><%= link_to "show", user_path(user.id) %></p>
    
  </div>
<% end %>