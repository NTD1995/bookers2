<h1>User info</h1>

  <h2>Name</h2>
  <%= @user.name %>
  
<h2>Image</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image %>
<% else %>
  <%= image_tag 'no_image' %>
<% end %>

  <h3>Introduction</h3>
  <%= @user.introduction %>

  <p><%= link_to "Edit User", edit_user_path(@user) %></p>
  

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
 <%= f.submit 'Create Book', class: "btn btn-lg btn-block btn-info mt-4" %>
<% end %>


<h1>Book detail</h1>

<div>
  <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_image(100,100)%>
  <% end %>
     <p>Name<%= link_to @book.user.name, user_path(@user.id) %></p>
        <p>Title<%= link_to @book.title, books_path(@user.id) %></p>
          <p>Opinion<%= @book.body %></p>
           <p><%= link_to 'Edit', edit_book_path(@book.id) %></p>
            <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => 'Are you sureï¼Ÿ' %></p>
</div>

