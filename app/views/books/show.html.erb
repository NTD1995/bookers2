<div class= "container">
 <div class= "row">
  <div class= "col-md-3">
   <%= render 'books/book', {books: @books ,book: @book}  %>
  </div>

   <div class="col-md-8 offset-md-1"> 
    <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>Book detail</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
     <tr>
      <td><%= link_to user_path(@user.id) do %>
       <%= image_tag @user.get_image(100,100)%>
       <% end %></td>
      <td>Name<%= link_to @book.user.name, user_path(@user.id) %></td>
       <td>Title<%= link_to @book.title, books_path(@user.id) %></td>
        <td>Opinion<%= @book.body %></td>
         <% if @user.id == current_user.id %>
          <td><%= link_to  edit_book_path(@book.id), class: "btn btn-outline-secondary btn-block" do %>
           Edit
              <% end %>
          </td> 
          <td><%= link_to  book_path(@book.id), class: "btn btn-outline-secondary btn-block" , method: :delete, "data-confirm" => 'Are you sureï¼Ÿ' do %>
            Destroy
              <% end %>
          </td>
        <% end %>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
</div>

