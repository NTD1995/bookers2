<h1>User info</h1>

  <h2>Name</h2>
  <%= @user.name %>
  
<h2>Image</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image %>
<% else %>
  <%= image_tag 'no_image' %>
<% end %>

  <h3>Introduction</h3>
  <%= @user.introduction %>

  <p><%= link_to "Edit User", edit_user_path(@user) %></p>
  

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: "btn btn-lg btn-block btn-info mt-4" %>
<% end %>



<h1>Books</h1>

<% @books.each do |book| %>
  <div>
    <%= image_tag book.user.get_image(100,100) %>
    <p><%= link_to 'no_image.jpg', user_path(book.user.id) %></p>
    <p>Title<%= link_to book.title, book_path(book.id) %></p> 
    <p>Opinion<%= book.body %></p>
   
    
  </div>
<% end %>