<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors have occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:""%>
    <label for="inputName">Opinion</label>
    <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:""%>
  <%= f.submit "Update Book" %>
    <%= link_to "Show",  book_path(@book.id)%>
      <%= link_to "Back", books_path %>
<% end %>